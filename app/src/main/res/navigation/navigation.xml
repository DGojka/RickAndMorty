<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/charactersFragment">

    <fragment
        android:id="@+id/charactersFragment"
        android:name="com.example.rickandmorty.characterfragment.PersonsListFragment"
        tools:layout="@layout/fragment_characters_list">
        <action
            android:id="@+id/action_to_more_details_fragment"
            app:destination="@id/moreDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/moreDetailsFragment"
        android:name="com.example.rickandmorty.characterfragment.MoreDetailsFragment">
        <action
            android:id="@+id/action_to_personsFragment"
            app:destination="@id/charactersFragment" />
    </fragment>
</navigation>